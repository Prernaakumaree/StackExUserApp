<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prerna.stackexchangeuser">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.prerna.stackexchangeuser.UserApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UserApp">
        <activity android:name="com.prerna.stackexchangeuser.ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.user.UserActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/Theme.UserApp">
        </activity>

        <activity
            android:name=".ui.detail.UserDetailActivity">
        </activity>
    </application>

</manifest>